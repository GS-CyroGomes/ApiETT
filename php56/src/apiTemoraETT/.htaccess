# /var/www/html/temora_api/.htaccess
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Base do projeto (pasta onde a API está)
    RewriteBase /temora_api/

    # Não reescreve se for arquivo ou pasta existente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Tudo mais vai para index.php como parâmetro "url"
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>
